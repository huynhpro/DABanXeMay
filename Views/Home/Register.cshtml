@model ShopXeMay.Models.TaiKhoan
@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ...:::: Start Breadcrumb Section:::... -->
<div class="breadcrumb-section breadcrumb-bg-color--golden">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="~/Home/Index">Trang Chủ</a></li>
                                <li class="active" aria-current="page">Đăng Ký</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- ...:::: End Breadcrumb Section:::... -->
<!--register area start-->
<h4 style="color: red">@ViewBag.error</h4>
<div class="col-md-6" style="margin:auto;">
    @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { id = "register" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal center">
            <h3 style="color:red;">@ViewBag.error</h3>
            <h4>Đăng Ký</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="default-form-box">
                Họ Và Tên
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên người dùng" } })
                    <span class="form-message"></span>
                </div>
            </div>
            <div class="default-form-box">
                Email
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập Email" } })
                    <span class="form-message"></span>
                </div>
            </div>

            <div class="default-form-box">
                Mật Khẩu
                <div class="col-md-12">
                    <input id="MatKhau" name="MatKhau" placeholder="Nhập mật khẩu" type="password" class="form-control">
                    <span class="form-message"></span>
                </div>
            </div>
            <div class="default-form-box">
                Nhập Lại Mật Khẩu
                <div class="col-md-12">
                    <input id="password_confirmation" name="password_confirmation" placeholder="Nhập lại mật khẩu" type="password" class="form-control">
                    <span class="form-message"></span>
                </div>
            </div>
            <div class="default-form-box">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="submit" class="btn btn-md btn-black-default-hover mb-4" style="width:200px;" value="Đăng Ký" />
                </div>
            </div>
        </div>
    }
</div>
<!--register area end-->
