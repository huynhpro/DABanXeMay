                        <div class="checkbox">
                            @Html.EditorFor(model => model.DaThanhToan)
                            @Html.ValidationMessageFor(model => model.DaThanhToan, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GiaoHang.TenTrangThai, null, htmlAttributes: new { @class = "control-label col-md-4" })
