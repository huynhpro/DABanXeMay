@model ShopXeMay.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4 style="font-weight:bold;margin-left:10px;">Cập Nhật Đơn Hàng</h4>
    <div class="form-horizontal">

        <hr />
